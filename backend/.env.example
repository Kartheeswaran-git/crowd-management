# Environment Configuration
# Copy this file to .env and update with your values

# Flask Configuration
SECRET_KEY=crowd_secret_key_change_in_production
DATABASE_URI=sqlite:///database.db

# JWT Configuration
JWT_SECRET_KEY=jwt_secret_key_change_in_production

# Crowd Detection Configuration
CROWD_THRESHOLD=10
DETECTION_CONFIDENCE=0.5

# Camera Configuration
# Use 0 for USB camera, or RTSP URL for IP camera
# Example RTSP: rtsp://username:password@ip:port/stream
CAMERA_SOURCE=0
CAMERA_WIDTH=640
CAMERA_HEIGHT=480
CAMERA_FPS=30

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
